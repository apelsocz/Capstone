<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vendor_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryColor"
    tools:context=".VendorActivity">
    
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/vendor_image"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/vendor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:text="Four Barrel Coffee"/>
    <TextView
        android:id="@+id/vendor_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:layout_below="@id/vendor_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:text="****"/>
    <TextView
        android:id="@+id/vendor_rating_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:layout_toEndOf="@id/vendor_rating"
        android:layout_below="@id/vendor_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:text="1738"/>
    <TextView
        android:id="@+id/vendor_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:layout_below="@id/vendor_rating"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="$"/>
    <TextView
        android:id="@+id/vendor_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:layout_below="@id/vendor_rating"
        android:layout_toEndOf="@id/vendor_price"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="Coffee &amp; Tea"/>

</RelativeLayout>