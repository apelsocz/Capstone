<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vendor_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/primaryColor"
    android:paddingTop="4dp"
    tools:context=".VendorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/vendor_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/vendor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="16dp"
            android:paddingTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textColorPrimary"
            android:maxLines="1"
            tools:text="Four Barrel Coffee" />

        <TextView
            android:id="@+id/vendor_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vendor_name"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="16dp"
            android:paddingBottom="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:maxLines="1"
            android:textColor="@color/textColorSecondary"
            tools:text="Coffee &amp; Tea" />

        <ImageView
            android:id="@+id/vendor_rating_image"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@id/vendor_category"
            android:layout_marginStart="72dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/rating_0"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/vendor_rating"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@id/vendor_category"
            android:layout_toEndOf="@id/vendor_rating_image"
            android:padding="4dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="4dp"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="1738" />

    </RelativeLayout>

    <TextView
        android:id="@+id/vendor_snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/textColorSecondary"
        android:maxLines="3"
        tools:text="What would I do without Yelp?\nI wouldn't be HALF the foodie I've become it weren't for this business.    \nYelp makes it virtually effortless to discover new..." />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/divider" />

</LinearLayout>