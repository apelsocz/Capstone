<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="4dp"
                android:text="Search"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />
            <EditText
                android:id="@+id/search_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:inputType="text"
                android:text="Search term"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <GridLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/GridLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="4dp"
                    android:layout_columnSpan="2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="Location"
                    />
                <EditText
                    android:id="@+id/search_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_columnSpan="2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:inputType="text"
                    android:text="137 Gladstone Avenue, Toronto ON"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_columnSpan="2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="4dp"
                    android:layout_columnWeight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="Sort" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="4dp"
                    android:layout_columnSpan="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="Radius"
                    />
                <RadioGroup
                    android:id="@+id/search_sort_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_rowSpan="2"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/search_sort_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Best Match"/>
                    <RadioButton
                        android:id="@+id/search_sort_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Distance"/>
                    <RadioButton
                        android:id="@+id/search_sort_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Highest Rated"/>
                </RadioGroup>
                <SeekBar
                    android:id="@+id/search_distance_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1" />
                <TextView
                    android:id="@+id/search_distance_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_horizontal"
                    android:paddingStart="4dp"
                    android:layout_columnSpan="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textColorPrimary"
                    android:text="0 km" />
            </GridLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>