<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:paddingStart="4dp"
                android:text="Keyword"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <EditText
                android:id="@+id/search_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Search term" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:paddingStart="4dp"
                    android:text="Location"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/search_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        tools:text="137 Gladstone Avenue, Toronto ON" />
                    <ImageView
                        android:id="@+id/search_location_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="false"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_my_location_black_24dp" />
                </LinearLayout>

                <View
                    android:id="@+id/search_location_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/divider" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:paddingStart="4dp"
                        android:text="Sort"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:paddingStart="4dp"
                        android:text="Radius"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <RadioGroup
                        android:id="@+id/search_sort_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:layout_rowSpan="2"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/search_sort_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Best Match" />

                        <RadioButton
                            android:id="@+id/search_sort_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Distance" />

                        <RadioButton
                            android:id="@+id/search_sort_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Highest Rated" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/search_distance_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_horizontal"
                        android:paddingStart="4dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/textColorPrimary"
                        tools:text="0 km" />

                    <SeekBar
                        android:id="@+id/search_distance_slider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" />

                </GridLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>